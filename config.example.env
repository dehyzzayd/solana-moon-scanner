# Solana RPC Configuration
# QuickNode RPC endpoint (mainnet-beta)
QUICKNODE_RPC_URL=https://your-endpoint.quiknode.pro/your-key/
QUICKNODE_WSS_URL=wss://your-endpoint.quiknode.pro/your-key/

# Helius RPC endpoint (mainnet-beta)
HELIUS_RPC_URL=https://mainnet.helius-rpc.com/?api-key=your-helius-key
HELIUS_API_KEY=your-helius-key-here

# Primary RPC provider (quicknode or helius)
PRIMARY_RPC_PROVIDER=quicknode

# RPC Configuration
RPC_TIMEOUT=30
RPC_MAX_RETRIES=3
RPC_RETRY_DELAY=2

# Monitoring Configuration
# Maximum age of tokens to monitor (in minutes)
MAX_TOKEN_AGE_MINUTES=60
# Minimum MoonScore to trigger alerts
MIN_MOON_SCORE_THRESHOLD=70.0
# Scan interval in seconds
SCAN_INTERVAL_SECONDS=10
# Enable websocket subscriptions for real-time monitoring
ENABLE_WEBSOCKET=true

# DEX Configuration
# Comma-separated list of DEXs to monitor (raydium,orca,jupiter)
MONITORED_DEXS=raydium,orca,jupiter

# Alert Configuration
# Telegram Bot
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz123456789
TELEGRAM_CHAT_ID=-1001234567890
TELEGRAM_ENABLED=true

# Discord Webhook
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/1234567890/abcdefghijklmnopqrstuvwxyz
DISCORD_ENABLED=true

# Generic Webhook (JSON POST)
WEBHOOK_URL=https://your-webhook-endpoint.com/alerts
WEBHOOK_ENABLED=false
WEBHOOK_SECRET=your-webhook-secret-key

# Social Media APIs
# Twitter/X API for social momentum tracking
TWITTER_BEARER_TOKEN=your-twitter-bearer-token-here
TWITTER_API_ENABLED=false

# External Data Sources
# Solscan API (for contract verification)
SOLSCAN_API_KEY=your-solscan-api-key-here
SOLSCAN_API_ENABLED=true

# Token Sniffer API (optional, for additional validation)
TOKEN_SNIFFER_API_KEY=your-token-sniffer-key-here
TOKEN_SNIFFER_ENABLED=false

# Validation Thresholds
# Maximum percentage of supply held by top 10 holders
MAX_TOP_HOLDERS_PERCENT=30.0
# Maximum percentage held by dev wallet
MAX_DEV_WALLET_PERCENT=5.0
# Minimum LP lock duration (in days)
MIN_LP_LOCK_DAYS=30

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/moon_scanner.log
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=5

# Prometheus Metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Database (Optional - for storing historical data)
DATABASE_ENABLED=false
DATABASE_PATH=data/moon_scanner.db

# Simulator Mode (for backtesting)
SIMULATOR_MODE=false
SIMULATOR_START_TIME=2024-01-01T00:00:00
SIMULATOR_END_TIME=2024-01-02T00:00:00
SIMULATOR_SPEED=1.0

# Security
# Rate limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=60
# Maximum concurrent requests
MAX_CONCURRENT_REQUESTS=10
